<!-- res/drawable/rounded_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/red"/> <!-- Replace with desired background color -->

    <!-- Rounded corners -->
    <corners android:radius="32dp"/> <!-- Set corner radius for the border -->

    <!-- Border color and width -->
    <stroke android:color="#000000" android:width="2dp"/> <!-- Border color and width -->
</shape>
